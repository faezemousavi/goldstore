@model IEnumerable<DataLayer.Feature>

@{
    ViewBag.Title = "پنل ادمین - ویژگی ها";
    Layout = "~/Areas/Admin/Views/Shared/_DefaultAdmin.cshtml";
}

<h2>ویژگی ها</h2>

<p>
    <a href="@Url.Action("Create")" class="btn btn-success">افزودن ویژگی جدید</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Feature_title)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Feature_title)
            </td>
            <td>
                <a href="@Url.Action("Edit",new {id=item.Feature_id})" class="btn btn-warning btn-sm">
                    <i class="glyphicon glyphicon-edit"></i>
                </a>
                <a href="@Url.Action("Delete",new {id=item.Feature_id})" class="btn btn-danger btn-sm">
                    <i class="glyphicon glyphicon-trash"></i>
                </a>
            </td>
        </tr>
    }

</table>
