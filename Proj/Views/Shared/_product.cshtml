@model DataLayer.Product

<div class="col-md-4 col-sm-6">
    <div class="border-radius">
        <span style="width: 80%; display:block; margin:10px auto 0;">
            <img style="width: 100%; height: 150px" src="/Images/ProductImages/Thumb/@Model.Product_image">
        </span>
        <h2>
            <a href="/ShowProduct/@Model.Product_id">
                @Model.Product_title
            </a>
        </h2>
        <h6>افزودن به لیست مقایسه <input type="checkbox" onchange="AddToCompare(@Model.Product_id)"></h6>
        <span class="col-md-9 col-sm-9 col-xs-9 price-layer">
            <label>@Model.Product_price.ToString("#,0")  تومان</label>
        </span>
        <a href="" onclick="AddToCard(@Model.Product_id)" class="col-md-2 col-sm-2 col-xs-2 col-md-offset-1 col-sm-offset-1 col-xs-offset-1 buy-button border-radius">
            <label><i class="fa fa-shopping-basket"></i></label>
        </a>
    </div>
</div>

