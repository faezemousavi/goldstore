@model IEnumerable<DataLayer.User>

@{
    ViewBag.Title = "Index";
}

<h2>مدیریت کاربران</h2>

<p>
   <a class=" btn btn-success" href=@Url.Action("create")>افزودن کاربر </a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.user_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Role.Role_title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.isActive)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RegisterDate)
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.user_name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Role.Role_title)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.email)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.isActive)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.RegisterDate)
    </td>

    <td>
        <a class="btn btn-warning btn-sm" href="/admin/users/edit/@item.User_id">
            <i class="glyphicon glyphicon-edit"></i>
        </a>
        <a class="btn btn-danger btn-sm"  href="/admin/users/delete/@item.User_id">
            <i class="glyphicon glyphicon-trash"></i>
        </a>
        
    </td>
</tr>
}

</table>
